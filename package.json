{
  "name": "sindri",
  "version": "1.0.0",
  "description": "AI-powered cloud development forge on Fly.io",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "format": "prettier --write '**/*.md' '**/*.json' '**/*.yml' '**/*.yaml'",
    "format:check": "prettier --check '**/*.md' '**/*.json' '**/*.yml' '**/*.yaml'",
    "format:md": "prettier --write '**/*.md'",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore .archive",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore .archive --fix",
    "deps:check": "ncu",
    "deps:check:minor": "ncu --target minor",
    "deps:check:patch": "ncu --target patch",
    "deps:upgrade": "ncu -u",
    "deps:upgrade:minor": "ncu -u --target minor",
    "deps:upgrade:patch": "ncu -u --target patch",
    "deps:upgrade:interactive": "ncu -i",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "security": "pnpm run audit"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.45.0",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.20.0"
  }
}
